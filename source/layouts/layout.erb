<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "My Ember App" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
  </head>
  
  <body>
    <div id="ember-app"></div>

<% 
  Dir.glob(
    File.expand_path(File.join("..", "..", "templates", "**", "*.hbs*"), __FILE__)
  ).each do |path| %>
<%= partial path.slice(/(templates.+)\.hbs\.erb/, 1) %>
<% end %>

    <script src="/javascripts/vendor/jquery-1.10.2.js"></script>
    <script src="/javascripts/vendor/handlebars-1.1.2.js"></script>
    <script src="/javascripts/vendor/ember-1.3.1.js"></script>

    <%= javascript_include_tag "all" %>
    
    <!-- to activate the test runner, add the "?test" query string parameter -->
    <script src="/tests/runner.js"></script>
  </body>
</html>